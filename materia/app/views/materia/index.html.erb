<p id="notice"><%= notice %></p>

<h1>Listing Materia</h1>

<table>
  <thead>
    <tr>
      <th>Materia</th>
      <th>Profesor</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materia.each do |materium| %>
      <tr>
        <td><%= materium.materia %></td>
        <td><%= materium.profesor %></td>
        <td><%= materium.codigo %></td>
        <td><%= link_to 'Show', materium class:'button' %></td>
        <td><%= link_to 'Edit', edit_materium_path(materium class:'button) %></td>
        <td><%= link_to 'Destroy', materium class:'button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

